<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/white_FFFFFF"
    tools:context="com.wohlig.sava.OneFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/red" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/red" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/red" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/red" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/red" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/grey" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="220dp"
        android:text="@string/lastvisited" />


    <LinearLayout
        android:id="@+id/linear_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_visited"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_hori_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rewards"
                android:textColor="@color/black_000000"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_3rdstamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/strike_through"
                android:text="@string/grab3" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_stamp"
                android:padding="3dp"
                android:text="@string/redeemed"
                android:textAlignment="center"
                android:textSize="10sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_6thstamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/strike_through"
                android:text="@string/grab6" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_stamp"
                android:padding="3dp"
                android:text="@string/transferred"
                android:textAlignment="center"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_8thstamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grab8"
                android:textColor="@color/green_4ca64c" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-18dp">

            <TextView
                android:id="@+id/use_now"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_greenstamp"
                android:padding="3dp"
                android:text="@string/usenow"
                android:textAlignment="center"
                android:textColor="@color/green_4ca64c"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_10thstamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grab10" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dashed_rectangle"
                android:padding="3dp"
                android:textAlignment="center"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_15thstamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grab15" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dashed_rectangle"
                android:padding="3dp"
                android:textAlignment="center"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
