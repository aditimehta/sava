<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EDEDED"
    tools:context="com.wohlig.sava.MainActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/ic_launcher"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:layout_marginTop="-100dp"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Modern Caffe Coffee Day"
                    android:textSize="25sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza restaurant, Italian restaurant..."
                android:textSize="19sp"

                android:id="@+id/textView" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opens in 10mins"
                    android:id="@+id/textView2"
                    android:paddingTop="13dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 AM to 11 AM, 12 Noon to 5 PM"
                    android:id="@+id/textView3" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView1"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st Floor, The Destination, GM Road, Chembur East Mumbai, Maharashtra"
                    android:id="@+id/textView4"
                    android:textSize="21dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Beer or house wine"
                android:id="@+id/textView5" />

            <ImageView
                android:layout_marginLeft="70dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2" />


        </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carte menu with a cham"
                    android:id="@+id/textView7"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-35dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33% offon your first visit"
                    android:id="@+id/textView8" />

                <ImageView
                    android:layout_marginLeft="70dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView5" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal from the a`la carte menu with a cham"
                android:id="@+id/textView9"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-35dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Offers (5)"
                    android:id="@+id/textView10" />

                <ImageView
                    android:layout_marginLeft="70dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/phone_icon" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loyalty"
                    android:id="@+id/textView6"
                    android:textSize="30dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can claim two redemption offers"
                    android:id="@+id/textView17"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1500dp"/>
            </LinearLayout>
            


        </LinearLayout>

    </ScrollView>

</RelativeLayout>

