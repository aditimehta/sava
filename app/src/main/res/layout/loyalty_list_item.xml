<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loyalty_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/loyalty_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/loyalty_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/loyalty_icon"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loyalty_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loyalty_text1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loyalty_icon"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/loyalty_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/loyalty_text1"
            android:layout_alignBottom="@+id/loyalty_text1"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:text="500"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/loyalty_score"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/loyalty_points"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/loyalty_score"
            android:layout_below="@+id/layout_loyalty_stamps1"
            android:text="10:30am"
            android:textSize="11sp" />

        <RelativeLayout
            android:id="@+id/layout_loyalty_stamps1"
            android:layout_width="230dp"
            android:layout_height="13dp"
            android:layout_below="@+id/loyalty_text2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loyalty_icon">

            <ImageView
                android:id="@+id/loyalty_stamp1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp1"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp3"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp2"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp4"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp3"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp5"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp4"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp6"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp5"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp7"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp6"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp8"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp7"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp9"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp8"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp10"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp9"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp11"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp10"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp12"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp11"
                android:src="@drawable/red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp13"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp12"
                android:src="@drawable/grey"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_loyalty_stamps2"
            android:layout_width="200dp"
            android:layout_height="13dp"
            android:layout_below="@+id/layout_loyalty_stamps1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/loyalty_icon">

            <ImageView
                android:id="@+id/loyalty_stamp14"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/grey"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/loyalty_stamp15"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/loyalty_stamp14"
                android:src="@drawable/grey"
                android:visibility="invisible" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>