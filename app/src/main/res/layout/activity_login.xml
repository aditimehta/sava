<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:background="@color/white_FFFFFF">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/img_left_arrow"
        android:src="@drawable/arrowleftred"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wcback"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="12dp"
        android:id="@+id/txt_wc"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/edt_email_id"
        android:layout_width="350dp"
        android:layout_below="@+id/txt_wc"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:hint="Email Address" />

    <ImageView
        android:id="@+id/img_grey_email"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/greyemail" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edt_email_id"
        android:layout_below="@+id/edt_email_id"
        android:layout_marginTop="14dp"
        android:hint="Password" />

    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/gerylock" />

    <ImageView
        android:id="@+id/img_eye"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/img_lock"
        android:layout_alignEnd="@+id/edt_password"
        android:layout_marginEnd="4dp"
        android:src="@drawable/pass" />

    <Button
        android:id="@+id/bttn_login"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white_FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_already_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bttn_login"
        android:layout_below="@+id/bttn_login"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_000000"
        android:text="Don\'t have an account?" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_already_member"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/txt_already_member"
        android:text="@string/signup"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/txt_signup" />

    <include
        android:layout_below="@+id/txt_signup"
        layout="@layout/fb_gplus_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></include>

</RelativeLayout>