<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relative_points"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/store" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView9"
                android:layout_centerVertical="true"
                android:text="@string/lastvisited"
                android:textColor="@color/white_FFFFFF" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="90dp"
                android:text="@string/cafe_coffee_day"
                android:textColor="@color/white_FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_malad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="-4dp"
                android:text="@string/malad_west"
                android:textColor="@color/white_FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_malad"
                android:layout_marginLeft="18dp"
                android:background="#ebb651"
                android:padding="4dp"
                android:text="@string/gold"
                android:textColor="@color/white_FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/textView11"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/share"
                android:layout_marginLeft="10dp"
                android:src="@drawable/hamburger" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_congo1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/relative_points"
            android:background="#4cbb6e">

            <ImageView
                android:id="@+id/check"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:src="@drawable/forma1" />

            <TextView
                android:id="@+id/congoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/congratulations"
                android:textColor="@color/white_FFFFFF"
                android:textSize="22sp" />

            <View
                android:id="@+id/view_1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/congoo"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"></View>

            <TextView
                android:id="@+id/points_1730"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_below="@+id/view_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/_1730_points"
                android:textColor="@color/white_FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_bal"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@+id/points_1730"
                android:layout_centerInParent="true"
                android:text="@string/new_balance"
                android:textColor="@color/white_FFFFFF" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_summary"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/rel_congo1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/rel_congo1">

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="27dp"
                    android:background="@color/dark_grey_98a1a5" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/view"
                    android:layout_marginStart="61dp"
                    android:gravity="center"
                    android:text="@string/_650_points"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView20"
                    android:layout_below="@+id/textView20"
                    android:layout_marginLeft="7dp"
                    android:text="@string/you_earned" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/view"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@+id/view"
                    android:text="@string/_6543_59"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView22"
                    android:layout_alignTop="@+id/textView21"
                    android:layout_marginRight="3dp"
                    android:text="@string/you_spent" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/claim_offer1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/card_summary"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:text="@string/you_can_claim_2_redemption_offers"
            android:textColor="@color/black_000000"
            android:textSize="16sp" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_burger1"
            android:layout_width="500dp"
            android:layout_height="260dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/claim_offer1"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:id="@+id/relative_burger"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_burger1"
                    android:layout_width="450dp"
                    android:layout_height="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/offer4"
                    android:tint="@color/transparent_black_000000" />

                <TextView
                    android:id="@+id/free_burger1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/expires_in1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:text="@string/free_burger"
                    android:textColor="@color/white_FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/expires_in1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image_burger1"
                    android:layout_alignLeft="@+id/free_burger1"
                    android:layout_alignStart="@+id/free_burger1"
                    android:layout_marginBottom="11dp"
                    android:text="@string/expires"
                    android:textColor="@color/white_FFFFFF" />

                <TextView
                    android:id="@+id/points_5001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="210dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="@string/_500_points"
                    android:textColor="@color/white_FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_pizza1"
            android:layout_width="500dp"
            android:layout_height="260dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_view_burger1"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:id="@+id/relative_pizza1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pizza"
                    android:layout_width="450dp"
                    android:layout_height="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/offer5"
                    android:tint="@color/transparent_black_000000" />

                <TextView
                    android:id="@+id/free_pizza1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pizza"
                    android:layout_marginBottom="19dp"
                    android:layout_marginLeft="17dp"
                    android:text="@string/free_pizza"
                    android:textColor="@color/white_FFFFFF"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/points_6501"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/free_pizza1"
                    android:layout_alignEnd="@+id/free_pizza1"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/free_pizza1"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="@string/_650_points"
                    android:textColor="@color/white_FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_more_redemption_offers1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/card_view_pizza1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:id="@+id/relative_more_redemption_offers1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/more_redemption_offers1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="41dp"
                    android:text="@string/more_redemption_offers_5"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/image_right_arrow_more_redemption1"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/arrow" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_free_beer1"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_view_more_redemption_offers1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:id="@+id/relative_free_beer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/beer1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/wine"

                    />

                <TextView
                    android:id="@+id/free_beer1"
                    android:layout_width="600dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/beer1"
                    android:text="@string/free_beer_or_house_wine"
                    android:textColor="#4C4C4C"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_free_beer_right_arrow1"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/Carte_menu1"
                    android:layout_width="600dp"
                    android:layout_height="22dp"
                    android:layout_below="@+id/free_beer1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/beer1"
                    android:text="@string/carte_menu_with_a_cham"
                    android:textColor="@color/grey_e5e5e5"
                    android:textSize="14sp" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_33_off1"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_view_free_beer1"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            card_view:cardCornerRadius="2dp">

            <RelativeLayout
                android:id="@+id/relative_33_off1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/idea_icon1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/idea_icon" />

                <TextView
                    android:id="@+id/text_33_off1"
                    android:layout_width="720dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/idea_icon1"
                    android:text="@string/_33_off_on_your_first_visit"
                    android:textColor="#4C4C4C"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_right_arrow_33_off1"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/meal_from_menu1"
                    android:layout_width="650dp"
                    android:layout_height="22dp"
                    android:layout_below="@+id/text_33_off1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/idea_icon1"
                    android:text="@string/meal_from_the_a_la_carte_menu_with_a_cham"
                    android:textColor="@color/grey_e5e5e5"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_more_offers1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/card_view_33_off1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:id="@+id/relative_more_offers1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/more_offers1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="41dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="41dp"
                    android:text="@string/see_other_offers_6"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/image_right_arrow_more_offers1"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>


</ScrollView>