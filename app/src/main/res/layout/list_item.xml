<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="20dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-8dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/distance_low"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/tag"
            android:src="@drawable/heart"
            android:visibility="visible" />

        <TextView
            android:id="@+id/free_beer"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:textColor="#666666"
            android:textSize="17sp" />

        <TextView
            android:id="@id/home"
            android:layout_width="210dp"
            android:layout_height="23dp"
            android:layout_below="@id/free_beer"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"
            android:textColor="#B2B2B2"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/distance_low"
            android:layout_alignTop="@id/home"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/offer" />

        <TextView
            android:id="@+id/type"
            android:layout_width="185dp"
            android:layout_height="23dp"
            android:layout_below="@+id/home"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/location_home"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignBottom="@+id/distance_low"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/distance_low"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/distance_low"
            android:layout_width="33dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="66dp"
            android:text="@string/tenmiles"
            android:textSize="13sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

